#!groovy

properties([disableConcurrentBuilds()])

pipeline {
    agent any
    triggers { pollSCM('* * * * *') }
    options {
        buildDiscarder(logRotator(numToKeepStr: '10', artifactNumToKeepStr: '10'))
        timestamps()
    }
    stages {
        stage("create docker image") {
            steps {
                sh 'docker image rm -f xwisert/englishserver:latest'
                sh 'docker build -t xwisert/englishserver:latest .'
            }
        }
    }
}
